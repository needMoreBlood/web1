@model TatooParlor.TatooSalon

@{
    ViewBag.Title = "Количество записей: "+Model.Journal.Count;
    Layout = "_Layout";
}

<h2>Количество записей: @Model.Journal.Count</h2>

<table class="table table-bordered table-responsive table-hover">
    <thead><tr>
    <td>Имя</td>
    <td>Возраст</td>
    <td>Контакты</td>
    <td>Пол</td>
    <td>Стиль тату</td>
    <td>Часть тела</td>
    <td>Мастер</td>
    <td>Дата</td>
</tr></thead>
    @foreach (var sm in Model.Journal)
    {
    <tr>
        <td>@sm.VisitorName</td>
        <td>@sm.Age</td>
        <td>@sm.Contacts</td>
        <td>@sm.Gender</td>
        <td>@sm.TatooStyles</td>
        <td>@sm.BodyPart</td>
        <td>@sm.Master</td>
        <td>@sm.DateToVisit</td>
    </tr>
    }
</table>